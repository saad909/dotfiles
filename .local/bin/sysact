#!/bin/sh

# A dmenu wrapper script for system functions.

# For non-systemd init systems.
# case "$(readlink -f /sbin/init)" in
# 	*runit*) hib="sudo -S zzz" ;;
# 	*openrc*) reb="sudo -S openrc-shutdown -r"; shut="sudo -S openrc-shutdown -p" ;;
# esac

cmds="\
🔒  lock	i3lock
🚪  logout	i3-msg exit
🐻  hibernate	${hib:-systemctl hibernate}
🔃  reboot	${reb:-reboot}
😴  suspend	${reb:-systemctl suspend}
🖥️  shutdown	${shut:-shutdown -h now}"


choice="$(echo "$cmds" | cut -d'	' -f 1 | rofi -dmenu)" || exit 1

`echo "$cmds" | grep "^$choice	" | cut -d '	' -f2-`
