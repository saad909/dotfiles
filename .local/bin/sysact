cmds="\
🔒  lock	i3lock
🚪  logout	${out:-i3-msg exit}
🐻  hibernate	${hib:-sudo systemctl hibernate}
🔃  reboot	${reb:-sudo reboot}
😴  suspend	${reb:-sudo systemctl suspend}
🖥️  shutdown	${shut:sudo -shutdown  now}"

choice="$(echo "$cmds" | cut -d'	' -f 1 | rofi -dmenu)" || exit 1

`echo "$cmds" | grep "^$choice	" | cut -d '	' -f2-`
  
